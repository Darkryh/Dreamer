<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blackPrimary"
    tools:context=".presentation.web.WebActivity">

    <LinearLayout
        android:id="@+id/lnBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/blackPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/imvClose"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_clear"
            app:tint="@color/white"
            android:contentDescription="@string/close" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="8dp"
            android:contentDescription="@string/close"
            app:srcCompat="@drawable/ic_public_24"
            app:tint="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/test_example"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:lines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/txvUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/test_example"
                android:textAlignment="textStart"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:lines="1"
                android:ellipsize="end"/>

        </LinearLayout>

    </LinearLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnBar"/>

</androidx.appcompat.widget.LinearLayoutCompat>