<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_account"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="24dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/background_circular"
        android:backgroundTint="@color/backgroundSmooth"
        android:padding="4dp"
        android:src="@drawable/ic_user"
        android:contentDescription="@string/profile_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/text_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modo_invitado"
            android:textColor="?attr/colorPrimaryVariant"
            android:textSize="18sp"
            android:layout_margin="4dp"/>

        <TextView
            android:id="@+id/text_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:paddingHorizontal="8dp"
            android:text="@string/usuario"
            android:textSize="13sp"
            android:textColor="@color/grey_accent"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image_state"
        android:layout_gravity="center"
        android:layout_marginHorizontal="32dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="4dp"
        android:src="@drawable/ic_close_24"
        android:contentDescription="@string/profile_logo"
        app:tint="@color/pink" />
</LinearLayout>
