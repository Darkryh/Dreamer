<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity">

    <ImageView
        android:id="@+id/imvLogo_login"
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:layout_marginTop="64dp"
        android:contentDescription="@string/logo"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_logo_login"
        app:layout_constraintBottom_toTopOf="@+id/button_login_discord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_rounded_20dp"
        android:backgroundTint="?attr/colorPrimary"
        android:drawableStart="@drawable/ic_twitter_32"
        android:paddingHorizontal="16dp"
        android:text="@string/sign_in_twitter"
        android:textColor="?attr/colorSecondary"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/button_login_discord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlHardcoded,TextContrastCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_login_discord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="128dp"
        android:background="@drawable/background_rounded_20dp"
        android:backgroundTint="?attr/colorPrimary"
        android:drawableStart="@drawable/ic_discord_32"
        android:paddingHorizontal="16dp"
        android:text="@string/sign_in_discord"
        android:textColor="?attr/colorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imvLogo_login"
        tools:ignore="RtlHardcoded,TextContrastCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_guest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_rounded_20dp"
        android:backgroundTint="?attr/colorPrimary"
        android:drawableStart="@drawable/ic_incognito"
        android:paddingHorizontal="16dp"        android:text="@string/guest"
        android:textColor="?attr/colorSecondary"
        app:layout_constraintEnd_toEndOf="@+id/button_login_discord"
        app:layout_constraintStart_toStartOf="@+id/button_login_discord"
        app:layout_constraintTop_toBottomOf="@+id/button_login_discord"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/txvVersioning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="@string/test_example"
        android:textColor="@color/red"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_guest" />


</androidx.constraintlayout.widget.ConstraintLayout>