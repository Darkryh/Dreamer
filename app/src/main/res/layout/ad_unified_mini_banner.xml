<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:backgroundTint="?attr/colorSurface"
    app:cardCornerRadius="15dp"
    app:cardElevation="0dp">

    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/nativeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">

            <ImageView
                android:id="@+id/adAppIcon"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:background="@drawable/bg_rounded"
                android:backgroundTint="?attr/colorSecondary"
                android:contentDescription="@string/anime_logo"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher_app" />

            <TextView
                android:id="@+id/ad_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_blue_rounded"
                android:paddingHorizontal="7dp"
                android:text="@string/store"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="TextContrastCheck" />

            <TextView
                style="@style/Theme.Dreamer.AdAttribution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_rounded"
                android:backgroundTint="@color/yellow_700"
                android:paddingHorizontal="6dp"
                android:textColor="@color/white"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="@+id/adAppIcon"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/ad_headline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/title"
                android:textColor="@color/blueLight"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/lnOperation"
                app:layout_constraintStart_toEndOf="@+id/adAppIcon"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/ad_body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="4"
                android:text="@string/lorem"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ad_headline"
                app:layout_constraintStart_toEndOf="@+id/adAppIcon"
                app:layout_constraintTop_toBottomOf="@+id/ad_headline"
                tools:ignore="SmallSp" />

            <LinearLayout
                android:id="@+id/lnOperation"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/ad_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/price"
                    android:textColor="?attr/colorPrimaryVariant"
                    android:textSize="9sp"
                    tools:ignore="SmallSp" />

                <Button
                    android:id="@+id/ad_call_to_action"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:backgroundTint="@color/blueLight"
                    android:gravity="center"
                    android:textSize="9sp"
                    tools:ignore="SmallSp,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.gms.ads.nativead.NativeAdView>
</androidx.cardview.widget.CardView>