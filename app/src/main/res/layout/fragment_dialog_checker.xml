<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.chapter.checker.ChapterCheckerFragment">

    <ImageView
        android:id="@+id/image_cover_checker"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="2dp"
        android:background="@drawable/background_horizonal_border_down"
        android:contentDescription="@string/imageview_to_checker"
        tools:ignore="ImageContrastCheck" />
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/orange_peel_dark"
        android:background="@drawable/background_horizonal_border_down"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginHorizontal="8dp"
        android:text="@string/loading"/>

</LinearLayout>