<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_rounded_dialog_fragment"
    android:padding="2dp"
    tools:context=".presentation.chapter.checker.ChapterCheckerFragment">

    <ImageView
        android:id="@+id/image_cover_checker"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/background_horizonal_border_down"
        android:contentDescription="@string/imageview_to_checker"
        tools:ignore="ImageContrastCheck" />
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/orange_peel_dark"
        android:background="@drawable/background_horizonal_border_down"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:text="@string/loading"/>

</LinearLayout>