<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="?attr/colorSurface"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    app:strokeColor="@color/orange_peel_dark"
    android:layout_marginVertical="2dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <TextView
            android:id="@+id/txvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="-8dp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:maxLines="1"
            android:text="@string/title"
            android:textSize="12sp"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintBottom_toTopOf="@+id/guidelineHalf"
            app:layout_constraintEnd_toStartOf="@+id/txvChapterNumber"
            app:layout_constraintStart_toEndOf="@+id/progressBar"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextContrastCheck" />

        <ImageView
            android:id="@+id/imvPlayPause"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/imvCancel"
            app:layout_constraintEnd_toStartOf="@+id/imvCancel"
            app:layout_constraintTop_toTopOf="@+id/imvCancel"
            app:srcCompat="@drawable/ic_pause"
            android:contentDescription="@string/play_pause" />

        <ImageView
            android:id="@+id/imvCancel"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/cancel"
            app:layout_constraintBottom_toBottomOf="@+id/txvChapterNumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txvChapterNumber"
            app:srcCompat="@drawable/ic_close_24"
            app:tint="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/txvState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-8dp"
            android:text="@string/state"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txvTitle"
            app:layout_constraintTop_toTopOf="@+id/guidelineHalf"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/txvChapterNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/chapter_number_short"
            android:textColor="@color/grey_accent"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imvCancel"
            app:layout_constraintTop_toTopOf="@+id/txvTitle"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/txvLetter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            android:background="@drawable/background_circular"
            android:backgroundTint="?attr/colorPrimary"
            android:text="@string/d_letter"
            android:textColor="?attr/colorSecondaryVariant"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/txvLetter"
            app:layout_constraintEnd_toEndOf="@+id/txvLetter"
            app:layout_constraintStart_toStartOf="@+id/txvLetter"
            app:layout_constraintTop_toTopOf="@+id/txvLetter" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHalf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="26dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>