<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.player.PlayerExternalActivity">

    <LinearLayout
        android:id="@+id/ln_play_list_cast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/background_circular"
        android:backgroundTint="?attr/colorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="@string/playlist"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lnSettings"
            app:srcCompat="@drawable/ic_format_list_numbered"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/coverChapterExternal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/chapterLogo"
        android:minHeight="250dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bt_close_external_player"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/background_circular"
        android:backgroundTint="?attr/colorSecondary"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/close"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_expand_38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <Button
        android:id="@+id/buttonRelaunchExternal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="@string/relaunch_play"
        android:textColor="?attr/colorSecondaryVariant"
        app:layout_constraintBottom_toBottomOf="@+id/coverChapterExternal"
        app:layout_constraintEnd_toStartOf="@+id/coverChapterExternal"
        app:layout_constraintStart_toEndOf="@+id/coverChapterExternal" />

    <LinearLayout
        android:id="@+id/content_reference"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorSurface"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coverChapterExternal">

        <FrameLayout
            android:id="@+id/Frame_Content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>