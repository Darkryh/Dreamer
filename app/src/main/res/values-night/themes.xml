<resources>
    <!-- Base application theme. -->
    <style name="Theme.Dreamer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/whitePrimary</item>
        <item name="colorPrimaryVariant">@color/whiteSecondary</item>
        <item name="colorOnPrimary">@color/blackPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blackPrimary</item>
        <item name="colorSecondaryVariant">@color/blackSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blackSurface</item>
        <item name="android:colorControlActivated">@color/orange_peel</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogThemeDark</item>
        <item name="android:navigationBarColor">@color/dark_surface_light</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationViewDarkStyle</item>
        <!-- <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item> -->
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBottomSheetDialogThemeDark"
        parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyleDark</item>
    </style>

    <style name="AppModalStyleDark"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/theme_rounded_dialog_dark</item>
    </style>

    <style name="BottomNavigationViewDarkStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemTextColor">@color/bottom_nav_icon_dark_color</item>
        <item name="itemIconTint">@color/bottom_nav_icon_dark_color</item>
    </style>
</resources>